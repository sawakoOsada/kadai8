<!DOCTYPE html>
<html>
  <head>
    <title>Inst</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <header class="header clearfix">
        <div class="top">
          <%= link_to "Instagram", root_path %>
        </div>
        <nav>
          <ul class="top_menu clearfix">
            <% if logged_in? %>
              <li><%= link_to current_user.name, user_path(current_user.id) %></li>
              <li><%= link_to root_path do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
              <% end %>
              </li>
              <li><%= link_to new_picture_path do %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
              </li>
              <li><%= link_to pictures_path do %>
                <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
              <% end %>
              </li>
              <li><%= link_to favorites_path do %>
                <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
              <% end %>
              </li>
              <li><%= link_to session_path(current_user.id), method: :delete do %>
               <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>
               <% end %>
              </li>
            <% else %>
              <li><%= link_to "Sign up", new_user_path %></li>
              <li><%= link_to "Login", new_session_path %></li>
            <% end %>
          </ul>
        </nav>
      </header>
      <div class="content_box">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>
        <%= yield %>
        </div>
    <footer>
      <p>Â© 2020 INSTAGRAM FROM FACEBOOK</p>
    </footer>
    </div>
  </body>
</html>
