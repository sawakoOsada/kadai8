<div class = "clearfix">
  <div class = "profile_image">
    <%= image_tag(@user.profile.url) if @user.profile && @user.profile.url %>
  </div>
  <div class ="profile_other">
    <% if current_user == @user %>
      <%= link_to 'プロフィールを編集', edit_user_path(@user.id), class: "btn btn-default" %>
    <% end %>
    <h3><%= @user.name %></h3>
    <%= @user.profile_text if @user.profile_text %>
  </div>
</div>
